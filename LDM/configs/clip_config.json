{
    "model": {
        "vocab_size": 1000,
        "embedding_dim": 768,
        "max_length": 77,
        "num_heads": 12,
        "num_layers": 12
    },
    "training": {
        "batch_size": 32,
        "learning_rate": 1e-4,
        "weight_decay": 0.01,
        "epochs": 50,
        "warmup_steps": 1000,
        "save_every": 5,
        "optimizer": "adamw",
        "scheduler": "cosine",
        "grad_clip": 1.0
    },
    "data": {
        "train_split": 0.8,
        "num_workers": 4,
        "pin_memory": true,
        "seed": 42
    }
}
